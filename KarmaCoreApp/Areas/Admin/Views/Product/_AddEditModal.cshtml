<!-- Modal -->
<div id="modal-add-edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"> Add/edit product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--Form-->
                <form class="form-horizontal" role="form" id="frmMaintainance">
                    <div class="form-group row">
                        <input type="hidden" id="hidIdM" value="0" />
                        <label for="txtNameM" class="col-md-2 col-form-label form-control-label">Name</label>
                        <div class="col-md-10">
                            <input type="text" name="txtNameM" class="form-control" id="txtNameM" placeholder="Name of category">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="ddlCategoryIdM" class="col-md-2 col-form-label form-control-label">Category</label>
                        <div class="col-md-10">
                            <input id="ddlCategoryIdM" class="form-control" name="ddlCategoryIdM" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtDescM" class="col-md-2 col-form-label form-control-label">Description</label>
                        <div class="col-md-10">
                            <textarea rows="4" name="txtDescM" class="form-control" id="txtDescM"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtUnitM" class="col-md-2 col-form-label form-control-label">Unit</label>
                        <div class="col-md-5">
                            <input type="text" name="txtUnitM" class="form-control" id="txtUnitM">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtPriceM" class="col-md-2 col-form-label form-control-label">Sell price</label>
                        <div class="col-md-2">
                            <input type="text" name="txtPriceM" class="form-control" id="txtPriceM">
                        </div>

                        <label for="txtOriginalPriceM" class="col-md-2 col-form-label form-control-label">Original price</label>
                        <div class="col-md-2">
                            <input type="text" name="txtOriginalPriceM" class="form-control" id="txtOriginalPriceM">
                        </div>

                        <label for="txtPromotionPriceM" class="col-md-2 col-form-label form-control-label">Promotion</label>
                        <div class="col-md-2">
                            <input type="text" name="txtPromotionPriceM" class="form-control" id="txtPromotionPriceM">
                        </div>
                    </div>
                    @*<div class="form-group row">
                            <label for="txtImageM" class="col-md-2 col-form-label form-control-label">Images</label>
                            <div class="col-md-10">
                                <div class="input-group">
                                    <input type="text" name="txtImageM" class="form-control" id="txtImageM" />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-append">
                                        <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                                    </span>
                                </div>
                            </div>
                        </div>*@
                    <div class="form-group row">
                        <label for="txtContent" class="col-md-2 col-form-label form-control-label">Content</label>
                        <div class="col-md-10">
                            <textarea id="txtContent" rows="6" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtSeoPageTitleM" class="col-md-2 col-form-label form-control-label">SEO Title</label>
                        <div class="col-md-10">
                            <input type="text" name="txtSeoPageTitleM" class="form-control" id="txtSeoPageTitleM">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtSeoAliasM" class="col-md-2 col-form-label form-control-label">URL SEO</label>
                        <div class="col-md-10">
                            <input type="text" name="txtSeoAliasM" class="form-control" id="txtSeoAliasM">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtSeoKeywordM" class="col-md-2 col-form-label form-control-label">SEO Keyword</label>
                        <div class="col-md-10">
                            <input type="text" name="txtSeoKeywordM" class="form-control" id="txtSeoKeywordM">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtSeoDescriptionM" class="col-md-2 col-form-label form-control-label">SEO Description</label>
                        <div class="col-md-10">
                            <textarea rows="3" name="txtSeoDescriptionM" class="form-control" id="txtSeoDescriptionM"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="txtTagM" class="col-md-2 col-form-label form-control-label">Tag (separated by comma)</label>
                        <div class="col-md-10">
                            <textarea rows="3" name="txtTagM" class="form-control" id="txtTagM"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <div class="custom-control custom-checkbox mb-3">
                                <input class="custom-control-input" type="checkbox" checked="checked" id="ckStatusM">
                                <label class="custom-control-label" for="ckStatusM">Active</label>
                            </div>
                            <div class="custom-control custom-checkbox mb-3">
                                <input class="custom-control-input" type="checkbox" checked="checked" id="ckHotM">
                                <label class="custom-control-label" for="ckHotM">Hot Product</label>
                            </div>
                            <div class="custom-control custom-checkbox mb-3">
                                <input class="custom-control-input" type="checkbox" checked="checked" id="ckShowHomeM">
                                <label class="custom-control-label" for="ckShowHomeM">Show On Home</label>
                            </div>
                        </div>
                    </div>
                </form>
                <!--End Form-->
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>