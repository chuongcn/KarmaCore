@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title> Admin - Login System</title>

    <!-- Favicon -->
    <link rel="icon" href="~/admin-side/img/brand/favicon.png" type="image/png">
    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/admin-side/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/admin-side/vendor/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <link rel="stylesheet" href="~/admin-side/vendor/animate.css/animate.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/admin-side/vendor/bootstrap/dist/css/bootstrap.min.css" type="text/css" asp-append-version="true">

    <link rel="stylesheet" href="~/admin-side/vendor/fullcalendar/dist/fullcalendar.min.css">
    <link rel="stylesheet" href="~/admin-side/vendor/sweetalert2/dist/sweetalert2.min.css">

    <!-- Page plugins -->
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/admin-side/css/argon.css?v=1.1.0" type="text/css">
    <link href="~/admin-side/css/site.css" rel="stylesheet" />
</head>
<body class="bg-default">

    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-4 pt-lg-5">
            <div class="container">
                <div class="header-body text-center mb-7">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                            @*<h1 class="text-white">Welcome!</h1>
                                <p class="text-lead text-white">Use these awesome forms to login or create new account in your project for free.</p>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100">
                <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
                </svg>
            </div>
        </div>
        <!-- Page content -->
        <div class="container mt--8 pb-5">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7">
                    <div class="card bg-secondary border-0 mb-0">
                        <div class="card-body px-lg-5 py-lg-5">
                            <div class="text-center text-muted mb-4">
                                <h1 class="text-muted mb-4">Login</h1>
                            </div>
                            <form id="frmLogin">
                                @Html.AntiForgeryToken()
                                <div class="form-group mb-3">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-single-02"></i></span>
                                        </div>
                                        <input type="text"  class="form-control" name="userName" placeholder="Username" id="txtUsername">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                        </div>
                                        <input type="password"  class="form-control" name="password" placeholder="Password" id="txtPassword">
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn btn-primary btn-block my-4" id="btnLogin">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <a href="#" class="text-light"><small>Forgot password?</small></a>
                        </div>
                        @*<div class="col-6 text-right">
                                <a href="#" class="text-light"><small>Create new account</small></a>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/admin-side/vendor/jquery/dist/jquery-3.4.1.min.js"></script>
    <script src="~/admin-side/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin-side/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/admin-side/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/admin-side/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>

    <!-- Optional JS -->
    <script src="~/admin-side/vendor/chart.js/dist/Chart.min.js"></script>
    <script src="~/admin-side/vendor/chart.js/dist/Chart.extension.js"></script>
    <script src="~/admin-side/vendor/sweetalert2/dist/sweetalert2.all.min.js" asp-append-version="true"></script>
    <script src="~/admin-side/vendor/bootstrap-notify/bootstrap-notify.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @*<script src="~/lib/jquery-validation/localization/messages_vi.js"></script>*@

    <script src="~/admin-side/vendor/moment/min/moment.min.js"></script>
    <script src="~/admin-side/vendor/fullcalendar/dist/fullcalendar.min.js"></script>
    <script src="~/admin-side/vendor/sweetalert2/dist/sweetalert2.min.js"></script>

    <script src="~/app/shared/alert.js"></script>
    <script src="~/app/shared/messages.js"></script>
    <script src="~/app/shared/karmar.js"></script>
    <script src="~/app/controllers/login/index.js"></script>
    <!-- Argon JS -->
    <script src="~/admin-side/js/argon.js?v=1.1.0"></script>
    <script>
        var login = new loginController();
        login.initialize();        
    </script>
</body>
</html>